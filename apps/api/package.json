{
  "name": "@todo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.api.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.api.json --noEmit",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "db:seed": "tsx scripts/seed.ts",
    "mint:jwt": "tsx scripts/mint-dev-jwt.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:push:test": "cross-env NODE_ENV=test DRIZZLE_ENV=test drizzle-kit push --config=drizzle.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "drizzle-orm": "^0.44.6",
    "fastify": "^5.6.1",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.6.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "jsonwebtoken": "^9.0.2",
    "postcss": "^8.5.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  }
}
